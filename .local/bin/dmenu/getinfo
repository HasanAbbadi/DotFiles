#!/bin/sh

SEND="notify-send"
if [[ -z $1 ]]; then
  OPTION="$(echo -ne "clock\nbattery\ndisk\npackages
volume\ncpu\ntasks\nmemory\nkblayout
forecast\nmailbox\nnews\nmoonphase" | dmenu -i -p "Info: ")"
else
 SEND="echo"
 OPTION=$1
fi

case $OPTION in
  clock) $SEND "$(date | cut -d' ' -f5,6)" &&\
    $SEND "This Month" "$(cal --color=always | sed "s/..7m/<b><span color=\"red\">/;s/..27m/<\/span><\/b>/")" &&\
    $SEND "Appointments" "$(calcurse -d3)" ;;
  battery) $SEND "Battery: " "ðŸ”‹ $(cat /sys/class/power_supply/*/capacity)" ;;
  disk) $SEND "ðŸ’½ Disk space:" "$(df -h --output=target,used,size)" ;;
  packages) $SEND "All:	Update:" "$(pacman -Qn | wc -l)	$(pacman -Qu | wc -l)" ;;
  volume) $SEND -h int:value:$(pamixer --get-volume) "Volume: "  "ðŸ”‰ $(pamixer --get-volume-human)" ;;
  cpu) $SEND "ðŸ–¥ CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)\\n(100% per core)" ;;
  tasks) $SEND "$(tsp -l | awk -v numr=0 -v numq=0 '{if (/running/)numr++; if (/queued/)numq++} END{print numr+numq"("numq")"}')" ;;
  memory) $SEND "ðŸ§  Memory hogs" "$(ps axch -o cmd:15,%mem --sort=-%mem | head)" ;;
  kblayout) $SEND "Layout: " "$(setxkbmap -query | awk 'NR==3{print $2}')" ;;
  forecast) $SEND "$(curl "wttr.in/?T0q" 2>/dev/null)" ;;
  moonphase) $SEND "$(date '+%Y-%m-%d'): " "$(curl "wttr.in/?format=%m") 2>/dev/null" ;;
  mailbox) $SEND  "ðŸ”ƒ $(find "${XDG_DATA_HOME:-$HOME/.local/share}"/mail/*/[Ii][Nn][Bb][Oo][Xx]/new/* -type f | wc -l 2>/dev/null)" ;;
  news) $SEND "$(newsboat -x print-unread | awk '{ if($1>0) print "ðŸ“°" $1}') $(cat "${XDG_CONFIG_HOME:-$HOME/.config}"/newsboat/.update 2>/dev/null)" ;;
esac
