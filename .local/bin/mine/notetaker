#!/bin/sh

Date=$(date +%y-%m-%d)
FileName="${HOME}/dox/vimwiki/notes/note-${Date}.md"

if [ ! -f $FileName ]; then
  echo "# Notes for ${Date}" > $FileName
fi

vim --role "notetaker_window"\
    -c "norm Go"\
    -c "norm Go## $(date +%H:%M)"\
    -c "norm G2o"\
    -c "norm zz"\
    -c "startinsert"\
    $FileName
